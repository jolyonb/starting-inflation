     RowBox[{"data", ",", 
      RowBox[{
       RowBox[{
        RowBox[{"#", "[", 
         RowBox[{"[", "10", "]"}], "]"}], "\[Equal]", "0"}], "&"}]}], "]"}]}],
    "\[IndentingNewLine]", 
   RowBox[{"(*", " ", 
    RowBox[{
    "Selects", " ", "Bunch", " ", "Davies", " ", "data", " ", "only"}], " ", 
    "*)"}], "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"SelectBD", "[", "data_", "]"}], ":=", 
    RowBox[{"Select", "[", 
     RowBox[{"data", ",", 
      RowBox[{
       RowBox[{
        RowBox[{"#", "[", 
         RowBox[{"[", "10", "]"}], "]"}], "\[Equal]", "1"}], "&"}]}], "]"}]}],
    "\[IndentingNewLine]", 
   RowBox[{"(*", " ", 
    RowBox[{"Selects", " ", "perturbed", " ", "data", " ", "only"}], " ", 
    "*)"}], "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"SelectPerturbed", "[", "data_", "]"}], ":=", 
    RowBox[{"Select", "[", 

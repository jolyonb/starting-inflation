         RowBox[{"[", "1", "]"}], "]"}], ",", 
        RowBox[{"names", "[", 
         RowBox[{"[", "2", "]"}], "]"}], ",", 
        RowBox[{"names", "[", 
         RowBox[{"[", "index", "]"}], "]"}]}], "}"}]}], ",", 
     RowBox[{"ColorFunction", "\[Rule]", 
      RowBox[{"Function", "[", 
       RowBox[{
        RowBox[{"{", 
         RowBox[{"x", ",", "y", ",", "z"}], "}"}], ",", 
        RowBox[{"Hue", "[", 
         RowBox[{".65", 
          RowBox[{"(", 
           RowBox[{"1", "-", "z"}], ")"}]}], "]"}]}], "]"}]}]}], 
